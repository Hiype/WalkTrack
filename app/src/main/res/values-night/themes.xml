<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalkTrack.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/NightStatusBar</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/NightStatusBar</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/HintNight</item>
        <item name="android:fontFamily">@font/notosans</item>
        <item name="lottie_fileName">night.json</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>
    <style name="BottomNavigationView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/NightStatusBar</item>
    </style>
    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/NightStatusBar</item>
        <item name="android:tint">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>
    <style name="Tint">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="Base.Widget.Design.TabLayout." parent="android:Widget">
        <item name="android:tint">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>